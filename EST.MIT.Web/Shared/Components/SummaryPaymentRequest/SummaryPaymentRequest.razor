<div class="govuk-summary-card">
	<div class="govuk-summary-card__title-wrapper">
		<h2 class="govuk-summary-card__title">@PaymentRequest.PaymentRequestId</h2>
		@if(!HideActions)
		{
		<ul class="govuk-summary-card__actions">

			<li class="govuk-summary-card__action">
				<a class="govuk-link govuk-!-padding-left-2" href="/invoice/details/@_Parent.scheme/@_Parent.invoiceId">View<span class="govuk-visually-hidden">Payment Request</span></a>
			</li>
			<li class="govuk-summary-card__action">
				<a class="govuk-link govuk-!-padding-left-2" href="/invoice/amend-payment-request/@PaymentRequest.PaymentRequestId">Amend<span class="govuk-visually-hidden">Payment Request</span></a>
			</li>
			<li class="govuk-summary-card__action">
				<a class="govuk-link" href="/payment-request/delete/@PaymentRequest.PaymentRequestId">Delete<span class="govuk-visually-hidden">Payment Request</span></a>
			</li>

		</ul>
		}
	</div>

	<div class="govuk-summary-card__content">
		<dl class="govuk-summary-list">
			<div class="govuk-summary-list__row">
				<dt class="govuk-summary-list__key">Customer Id</dt>
				<dd class="govuk-summary-list__value">@PaymentRequest.CustomerId</dd>
			</div>
			<div class="govuk-summary-list__row">
				<dt class="govuk-summary-list__key">Claim Reference Number</dt>
				<dd class="govuk-summary-list__value">@PaymentRequest.ClaimReferenceNumber</dd>
			</div>
			<div class="govuk-summary-list__row">
				<dt class="govuk-summary-list__key">Currency</dt>
				<dd class="govuk-summary-list__value">@PaymentRequest.Currency</dd>
			</div>
			<div class="govuk-summary-list__row">
				<dt class="govuk-summary-list__key">Value</dt>
				<dd class="govuk-summary-list__value">@PaymentRequest.Value</dd>
			</div>
			<div class="govuk-summary-list__row">
				<dt class="govuk-summary-list__key">Description</dt>
				<dd class="govuk-summary-list__value">@PaymentRequest.Description</dd>
			</div>
		</dl>
	</div> 

</div>